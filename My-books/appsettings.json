{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error", // faqat error haye System log shavad
        "Microsoft": "Error" // faqat error haye Asp.Net log shavad
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt", // log ha dar foldere Logs zakhire mishavand
          "rollingInterval": "Day", // har ruz yek file jadid sakhte mishavad
          "outputTemplate": "{Timestamp} [{Level}] - Message:{Message}{NewLine}{Exception}" // format log ha
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.;Initial Catalog=my-book;Integrated Security=True;TrustServerCertificate=True", // connection be DB
          "tableName": "Logs", // name jadval
          "autoCreateSqlTable": true // agar jadval nabashad, Serilog khodesh sakhte mishavad
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "defaultConnection": "Data Source=.;Initial Catalog=my-book;Integrated Security=True;Pooling=False;Encrypt=True;TrustServerCertificate=True"
  },

  "JWT": {
    "Audience": "User",
    "Issuer": "http://localhost:5082",
    "Secret": "this-is-just-a-secret-key-here-1234"
  }
}
