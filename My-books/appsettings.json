{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message:{Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=.;Initial Catalog=my-book;Integrated Security=True;Pooling=False;Encrypt=True;TrustServerCertificate=True",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "defaultConnection": "Data Source=.;Initial Catalog=my-book;Integrated Security=True;Pooling=False;Encrypt=True;TrustServerCertificate=True"
  },

  "JWT": {
    "Audience": "User",
    "Issuer": "http://localhost:5082",
    "Secret": "this-is-just-a-secret-key-here-1234"
  }
}
